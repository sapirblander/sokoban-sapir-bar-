<?xml version="1.0" encoding="UTF-8"?>
	
<?import javafx.scene.layout.BorderPane?>
<?import view.LevelGraphicDisplay?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="view.SokobanViewController">
	<top>
		<MenuBar BorderPane.alignment="CENTER">
			<menus>
				<Menu mnemonicParsing="false" text="File">
					<items>
						<MenuItem mnemonicParsing="false" onAction="#openFile"
							text="Open" />
						<MenuItem mnemonicParsing="false" onAction="#saveFile"
							text="Save" />
						<MenuItem mnemonicParsing="false" onAction="#exitFile"
							text="Close" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Edit">
					<items>
						<MenuItem mnemonicParsing="false" text="Delete" />
					</items>
				</Menu>
				<Menu mnemonicParsing="false" text="Help">
					<items>
						<MenuItem mnemonicParsing="false" text="About" />
					</items>
				</Menu>
			</menus>
		</MenuBar>
	</top>
	<center>
		<LevelGraphicDisplay fx:id="levelGraphicDisplay"
			height="350" width="350" BorderPane.alignment="CENTER" wallImageSrc="./resources/wall.png"
			boxImageSrc="./resources/box.png" spaceImageSrc="./resources/space.png"
			playerImageSrc="./resources/character.png" targetImageSrc="./resources/target.png" />
	</center>
</BorderPane>
